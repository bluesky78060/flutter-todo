<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_dark"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with title, progress, add button, and menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <!-- Title and Progress Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/widget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_today_tasks"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Progress Text (e.g., "2/5 completed") -->
            <TextView
                android:id="@+id/widget_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#888888"
                android:textSize="12sp"
                android:paddingTop="2dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Add Button (blue circle with +) -->
        <FrameLayout
            android:id="@+id/widget_add_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/widget_add_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Menu Button (three dots) -->
        <TextView
            android:id="@+id/widget_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‹®"
            android:textColor="#888888"
            android:textSize="20sp"
            android:paddingStart="8dp"
            android:paddingEnd="4dp" />
    </LinearLayout>

    <!-- Divider (using TextView since View is not allowed in RemoteViews) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444" />

    <!-- Date Group Label 1 (Today, Tomorrow, etc.) -->
    <TextView
        android:id="@+id/widget_todo_1_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#4FC3F7"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="4dp"
        android:visibility="gone" />

    <!-- Todo Item 1 -->
    <LinearLayout
        android:id="@+id/widget_todo_1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="6dp">

        <!-- Checkbox -->
        <ImageView
            android:id="@+id/widget_todo_1_checkbox"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/widget_checkbox_unchecked" />

        <!-- Text Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_todo_1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_todo_1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#888888"
                android:textSize="11sp"
                android:paddingTop="2dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Date Group Label 2 -->
    <TextView
        android:id="@+id/widget_todo_2_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#4FC3F7"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="4dp"
        android:visibility="gone" />

    <!-- Todo Item 2 -->
    <LinearLayout
        android:id="@+id/widget_todo_2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/widget_todo_2_checkbox"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/widget_checkbox_unchecked" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_todo_2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_todo_2_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#888888"
                android:textSize="11sp"
                android:paddingTop="2dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Date Group Label 3 -->
    <TextView
        android:id="@+id/widget_todo_3_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#4FC3F7"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="4dp"
        android:visibility="gone" />

    <!-- Todo Item 3 -->
    <LinearLayout
        android:id="@+id/widget_todo_3_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/widget_todo_3_checkbox"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/widget_checkbox_unchecked" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_todo_3_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_todo_3_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#888888"
                android:textSize="11sp"
                android:paddingTop="2dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
