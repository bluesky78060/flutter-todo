<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Tasks"
        android:textColor="@color/widget_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Todo List Container -->
    <LinearLayout
        android:id="@+id/widget_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="12dp">

        <!-- Todo Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <CheckBox
                android:id="@+id/widget_todo_1_checkbox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/widget_todo_1_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Task 1"
                android:textColor="@color/widget_text_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/widget_todo_1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10:00"
                android:textColor="@color/widget_text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Todo Item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <CheckBox
                android:id="@+id/widget_todo_2_checkbox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/widget_todo_2_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Task 2"
                android:textColor="@color/widget_text_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/widget_todo_2_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="14:30"
                android:textColor="@color/widget_text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Todo Item 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <CheckBox
                android:id="@+id/widget_todo_3_checkbox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/widget_todo_3_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Task 3"
                android:textColor="@color/widget_text_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/widget_todo_3_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="16:00"
                android:textColor="@color/widget_text_secondary"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Footer - Tap to open app -->
    <TextView
        android:id="@+id/widget_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap to view all tasks"
        android:textColor="@color/widget_text_secondary"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingTop="8dp" />
</LinearLayout>
