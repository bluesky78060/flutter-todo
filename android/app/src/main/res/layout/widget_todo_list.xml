<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_dark"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header with title and add button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <!-- Title -->
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_today_tasks"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Progress badge -->
        <TextView
            android:id="@+id/widget_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#888888"
            android:textSize="12sp"
            android:paddingEnd="12dp"
            android:visibility="gone" />

        <!-- Add Button -->
        <FrameLayout
            android:id="@+id/widget_add_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/widget_add_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <!-- Date Group Label 1 -->
    <TextView
        android:id="@+id/widget_todo_1_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#7B61FF"
        android:textSize="11sp"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:paddingBottom="6dp"
        android:visibility="gone" />

    <!-- Todo Card 1 with Color Bar -->
    <LinearLayout
        android:id="@+id/widget_todo_1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/widget_card_background"
        android:layout_marginBottom="8dp">

        <!-- Color Bar (left side) -->
        <TextView
            android:id="@+id/widget_todo_1_color_bar"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/widget_color_bar_purple" />

        <!-- Content area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <!-- Checkbox -->
            <ImageView
                android:id="@+id/widget_todo_1_checkbox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/widget_checkbox_unchecked" />

            <!-- Text Container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_todo_1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/widget_todo_1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:paddingTop="2dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Category tag -->
            <TextView
                android:id="@+id/widget_todo_1_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#7B61FF"
                android:textSize="10sp"
                android:background="@drawable/widget_category_badge"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Date Group Label 2 -->
    <TextView
        android:id="@+id/widget_todo_2_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#7B61FF"
        android:textSize="11sp"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:paddingBottom="6dp"
        android:visibility="gone" />

    <!-- Todo Card 2 with Color Bar -->
    <LinearLayout
        android:id="@+id/widget_todo_2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/widget_card_background"
        android:layout_marginBottom="8dp">

        <!-- Color Bar -->
        <TextView
            android:id="@+id/widget_todo_2_color_bar"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/widget_color_bar_blue" />

        <!-- Content area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/widget_todo_2_checkbox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/widget_checkbox_unchecked" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_todo_2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/widget_todo_2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:paddingTop="2dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/widget_todo_2_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#42A5F5"
                android:textSize="10sp"
                android:background="@drawable/widget_category_badge"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Todo Card 3 with Color Bar -->
    <LinearLayout
        android:id="@+id/widget_todo_3_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/widget_card_background"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <!-- Color Bar -->
        <TextView
            android:id="@+id/widget_todo_3_color_bar"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/widget_color_bar_green" />

        <!-- Content area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/widget_todo_3_checkbox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/widget_checkbox_unchecked" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_todo_3_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/widget_todo_3_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:paddingTop="2dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/widget_todo_3_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#66BB6A"
                android:textSize="10sp"
                android:background="@drawable/widget_category_badge"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Empty state -->
    <TextView
        android:id="@+id/widget_empty_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_no_todos"
        android:textColor="#666666"
        android:textSize="13sp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:visibility="gone" />

</LinearLayout>
