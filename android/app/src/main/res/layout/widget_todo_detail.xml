<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_dark"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header with title and add button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <!-- Title -->
        <TextView
            android:id="@+id/widget_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_todo_detail_title"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Progress badge -->
        <TextView
            android:id="@+id/widget_detail_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#888888"
            android:textSize="12sp"
            android:paddingEnd="12dp"
            android:visibility="gone" />

        <!-- Add Button -->
        <FrameLayout
            android:id="@+id/widget_detail_add_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/widget_add_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <!-- Timeline container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <!-- Timeline line column -->
        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Timeline dot 1 -->
            <TextView
                android:id="@+id/widget_detail_dot_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/widget_timeline_dot" />

            <!-- Timeline line -->
            <TextView
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#333333"
                android:minHeight="40dp" />

            <!-- Timeline dot 2 -->
            <TextView
                android:id="@+id/widget_detail_dot_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/widget_timeline_dot_blue" />

            <!-- Timeline line to bottom -->
            <TextView
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#333333"
                android:minHeight="40dp" />
        </LinearLayout>

        <!-- Content column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- Todo Item 1 -->
            <LinearLayout
                android:id="@+id/widget_detail_todo_1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/widget_card_background"
                android:padding="10dp"
                android:layout_marginBottom="12dp">

                <!-- Checkbox -->
                <ImageView
                    android:id="@+id/widget_detail_todo_1_checkbox"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/widget_checkbox_unchecked" />

                <!-- Text Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/widget_detail_todo_1_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/widget_detail_todo_1_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#888888"
                        android:textSize="11sp"
                        android:paddingTop="2dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Time badge -->
                <TextView
                    android:id="@+id/widget_detail_todo_1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#7B61FF"
                    android:textSize="10sp"
                    android:background="@drawable/widget_category_badge"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Todo Item 2 -->
            <LinearLayout
                android:id="@+id/widget_detail_todo_2_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/widget_card_background"
                android:padding="10dp"
                android:layout_marginBottom="12dp">

                <!-- Checkbox -->
                <ImageView
                    android:id="@+id/widget_detail_todo_2_checkbox"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/widget_checkbox_unchecked" />

                <!-- Text Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/widget_detail_todo_2_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/widget_detail_todo_2_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#888888"
                        android:textSize="11sp"
                        android:paddingTop="2dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Time badge -->
                <TextView
                    android:id="@+id/widget_detail_todo_2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#42A5F5"
                    android:textSize="10sp"
                    android:background="@drawable/widget_category_badge"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Empty state -->
    <TextView
        android:id="@+id/widget_detail_empty_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_no_todos"
        android:textColor="#666666"
        android:textSize="13sp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:visibility="gone" />

</LinearLayout>
