<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_dark"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with title, progress, add button, and menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <!-- Title and Progress Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/widget_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_todo_detail_title"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Progress Text -->
            <TextView
                android:id="@+id/widget_detail_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#888888"
                android:textSize="12sp"
                android:paddingTop="2dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Add Button (blue circle with +) -->
        <FrameLayout
            android:id="@+id/widget_detail_add_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/widget_add_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Menu Button (three dots) -->
        <TextView
            android:id="@+id/widget_detail_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‹®"
            android:textColor="#888888"
            android:textSize="20sp"
            android:paddingStart="8dp"
            android:paddingEnd="4dp" />
    </LinearLayout>

    <!-- Divider -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444" />

    <!-- Todo Item 1 with title + description -->
    <LinearLayout
        android:id="@+id/widget_detail_todo_1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <!-- Checkbox -->
        <ImageView
            android:id="@+id/widget_detail_todo_1_checkbox"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/widget_checkbox_unchecked" />

        <!-- Text Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_detail_todo_1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_detail_todo_1_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#888888"
                android:textSize="13sp"
                android:paddingTop="3dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <!-- Divider between items -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="34dp"
        android:background="#333333" />

    <!-- Todo Item 2 with title + description -->
    <LinearLayout
        android:id="@+id/widget_detail_todo_2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:paddingTop="10dp"
        android:paddingBottom="8dp">

        <!-- Checkbox -->
        <ImageView
            android:id="@+id/widget_detail_todo_2_checkbox"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/widget_checkbox_unchecked" />

        <!-- Text Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_detail_todo_2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_detail_todo_2_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#888888"
                android:textSize="13sp"
                android:paddingTop="3dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
