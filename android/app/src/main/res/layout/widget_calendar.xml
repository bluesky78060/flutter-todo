<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp"
    android:clickable="true">

    <!-- Header - Month/Year with Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <!-- Previous Month Button -->
        <TextView
            android:id="@+id/btn_prev_month"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="◀"
            android:textSize="14sp"
            android:textColor="@color/widget_text_primary"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

        <!-- Month/Year Title -->
        <TextView
            android:id="@+id/calendar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_calendar_title"
            android:textColor="@color/widget_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Next Month Button -->
        <TextView
            android:id="@+id/btn_next_month"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="▶"
            android:textSize="14sp"
            android:textColor="@color/widget_text_primary"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

    </LinearLayout>

    <!-- Divider (using TextView instead of View for RemoteViews compatibility) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Day names header (Sunday first) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <TextView android:id="@+id/calendar_day_sun" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_sun" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#E53935" />
        <TextView android:id="@+id/calendar_day_mon" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_mon" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#424242" />
        <TextView android:id="@+id/calendar_day_tue" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_tue" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#424242" />
        <TextView android:id="@+id/calendar_day_wed" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_wed" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#424242" />
        <TextView android:id="@+id/calendar_day_thu" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_thu" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#424242" />
        <TextView android:id="@+id/calendar_day_fri" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_fri" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#424242" />
        <TextView android:id="@+id/calendar_day_sat" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_sat" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#1976D2" />
    </LinearLayout>

    <!-- Row 1 -->
    <LinearLayout
        android:id="@+id/calendar_row_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView android:id="@+id/calendar_day_1" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="13sp" />
        <TextView android:id="@+id/calendar_day_2" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="13sp" />
        <TextView android:id="@+id/calendar_day_3" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="13sp" />
        <TextView android:id="@+id/calendar_day_4" android:layout_width="0dp" android:layout_height="match_parent"
