<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="top"
    android:clickable="true">

    <!-- Header - Month/Year with Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <!-- Previous Month Button -->
        <TextView
            android:id="@+id/btn_prev_month"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="◀"
            android:textSize="14sp"
            android:textColor="@color/widget_text_primary"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

        <!-- Month/Year Title -->
        <TextView
            android:id="@+id/calendar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_calendar_title"
            android:textColor="@color/widget_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Next Month Button -->
        <TextView
            android:id="@+id/btn_next_month"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="▶"
            android:textSize="14sp"
            android:textColor="@color/widget_text_primary"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

    </LinearLayout>

    <!-- Divider (using TextView instead of View for RemoteViews compatibility) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/widget_divider" />

    <!-- Day names header (Sunday first) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <TextView android:id="@+id/calendar_day_sun" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_sun" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#E53935" />
        <TextView android:id="@+id/calendar_day_mon" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_mon" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#424242" />
        <TextView android:id="@+id/calendar_day_tue" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_tue" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#424242" />
        <TextView android:id="@+id/calendar_day_wed" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_wed" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#424242" />
        <TextView android:id="@+id/calendar_day_thu" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_thu" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#424242" />
        <TextView android:id="@+id/calendar_day_fri" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_fri" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#424242" />
        <TextView android:id="@+id/calendar_day_sat" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="@string/widget_day_sat" android:gravity="center" android:textSize="12sp" android:textStyle="bold" android:textColor="#1976D2" />
    </LinearLayout>

    <!-- Row 1 -->
    <LinearLayout
        android:id="@+id/calendar_row_1"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/calendar_day_1" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_2" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_3" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_4" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_5" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_6" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_7" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:id="@+id/calendar_row_2"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/calendar_day_8" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_9" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_10" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_11" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_12" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_13" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_14" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:id="@+id/calendar_row_3"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/calendar_day_15" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_16" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_17" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_18" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_19" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_20" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_21" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:id="@+id/calendar_row_4"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/calendar_day_22" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_23" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_24" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_25" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_26" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_27" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_28" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout
        android:id="@+id/calendar_row_5"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/calendar_day_29" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_30" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_31" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_32" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_33" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_34" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_35" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
    </LinearLayout>

    <!-- Row 6 -->
    <LinearLayout
        android:id="@+id/calendar_row_6"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/calendar_day_36" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_37" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_38" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_39" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_40" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_41" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
        <TextView android:id="@+id/calendar_day_42" android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:gravity="center" android:textSize="12sp" />
    </LinearLayout>

    <!-- Events Section Divider -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#33FFFFFF" />

    <!-- Events Section Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/events_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이번 달 일정"
            android:textColor="#BBBBBB"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/events_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#64B5F6"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Event Items Container -->
    <LinearLayout
        android:id="@+id/events_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Event Item 1 -->
        <LinearLayout
            android:id="@+id/event_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:visibility="gone">

            <!-- Date box: month on top, day below -->
            <TextView
                android:id="@+id/event_1_date"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_date_box"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#64B5F6"
                android:textSize="11sp"
                android:textStyle="bold"
                android:lineSpacingMultiplier="0.85" />

            <!-- Title and time column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/event_1_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Event Item 2 -->
        <LinearLayout
            android:id="@+id/event_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/event_2_date"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_date_box"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#64B5F6"
                android:textSize="11sp"
                android:textStyle="bold"
                android:lineSpacingMultiplier="0.85" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/event_2_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Event Item 3 -->
        <LinearLayout
            android:id="@+id/event_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/event_3_date"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_date_box"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="#64B5F6"
                android:textSize="11sp"
                android:textStyle="bold"
                android:lineSpacingMultiplier="0.85" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_3_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/event_3_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- No events message -->
        <TextView
            android:id="@+id/events_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일정이 없습니다"
            android:textColor="#666666"
            android:textSize="13sp"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>
